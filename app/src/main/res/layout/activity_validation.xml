<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3cf">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="验证"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/img_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#3cf"
            android:src="@mipmap/fan" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_validation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="124dp"
        android:hint="验证码" />

    <Button

        android:id="@+id/btn_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/et_validation"
        android:layout_toRightOf="@+id/et_validation"
        android:background="@drawable/selector_1"
        android:text="获取验证码"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_validation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:background="#3cf"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="25dp" />
</RelativeLayout>
